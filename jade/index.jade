mixin post(text,time)
	.post
		p!= text
		.time
			p Опубликованно в&nbsp;
				span!=time
			button.btn.btn-danger Удалить
doctype
html(ng-app="postsApp")
	head(lang="ru")
	meta(charset="UTF-8")
	link(rel="stylesheet" href="./css/main.css")
	script(src="./js/main.js")
	script(src="./js/controller.js")
	title Заметки
