body
	article.container.center-block(ng-controller="PostsController")
		.row
			.col-sm-12
				.panel.panel-default
					.panel-heading
						h2.text-center.text-uppercase Ваши заметки
					.panel-body
						section.row
							.col-sm-8
								h4.text-center.text-uppercase Самые свежие заметки
								.postsList
									.post
										p
										.time
											p Опубликованно&nbsp;
												span
											button.btn.btn-danger Удалить
									.post
										p Вы пока не создали ни одной заметки
							.col-sm-4
								h4.text-center.text-uppercase Создание новой заметки
								form(name="createPost")
									.form-group
										textarea(name="postText" id="postText" placeholder="Новая заметка" required).form-control
										p.js-minLength Осталось&nbsp;
											span
											|&nbsp;символов
										p.js-maxLength Нужно ввести минимальное число символов
										p.error Ой слишком ного символов
									.form-group
										input(type="submit" id="btnSubmit" value="Создать заметку").btn.btn-primary
										label (Ctrl + Enter)